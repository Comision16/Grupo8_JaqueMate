<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head',{ title : 'todos los productos' }) %> 
</head>
<body>
    <header class="carrito__header">
        <%- include('./partials/header') %> 
    </header>

    <main class="detalle__main">
            <section class="home__main__buscAnterior">
                <h4>Todos los productos</h4>
                <% products.forEach(product => { %>
                    <article> <a href="/products/detalle/<%= product.id %>">
                        <div class="img_product">
                            <img src="/images/<%= product.image %>" alt="">
                        </div>
                        <div class="descrip">
                            <p><%= product.name %></p>
                            <p><%= product.price %></p>
                        </div>
                    </a>
                </article>
                <% }) %>
            
            
        </section>
    </main>




    <footer class="home__footer">
        <%- include('./partials/footer') %> 
    </footer>
    
</body>
</html>